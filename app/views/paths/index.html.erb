<h1>Listing paths</h1>

<table>
  <thead>
    <tr>
      <th>Startnodeid</th>
      <th>Endnodeid</th>
      <th>State</th>
      <th>Startdescription</th>
      <th>Enddescription</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @paths.each do |path| %>
      <tr>
        <td><%= path.startNodeID %></td>
        <td><%= path.endNodeID %></td>
        <td><%= path.state %></td>
        <td><%= path.startDescription %></td>
        <td><%= path.endDescription %></td>
        <td><%= link_to 'Show', path %></td>
        <td><%= link_to 'Edit', edit_path_path(path) %></td>
        <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

